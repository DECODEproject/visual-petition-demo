{
  "name": "visual-petition-demo",
  "version": "1.0.0",
  "description": "Visual demo of the DDDC DecodeProject.eu petition flow.",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "npm run build && node src/server/index.js",
